<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.bottomnavigation.BottomNavigationView xmlns:android="http://schemas.android.com/apk/res/android"
                                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                                   xmlns:tools="http://schemas.android.com/tools"
                                                                   android:layout_width="match_parent"
                                                                   android:layout_height="wrap_content"
                                                                   android:background="?attr/colorPrimary"
                                                                   android:minHeight="?attr/actionBarSize">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/continuePurchase"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="@dimen/app_font_size"
                android:textColor="@color/colorAccent"
                android:text="@string/continue_purchase"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="120dp"
                app:layout_constraintTop_toBottomOf="@+id/finishPurchase" android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="80dp"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cartPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="@dimen/size_text_title_actionbar"
                android:textColor="@color/colorAccent"
                tools:text="R$ 199,00"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="22dp"/>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/finishPurchase"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:background="@drawable/round_corner_button"
                android:text="@string/finish_purchase"
                android:textSize="@dimen/app_font_size"
                android:textColor="@android:color/white"
                android:layout_marginEnd="32dp"
                android:padding="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="180dp"
                app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.bottomnavigation.BottomNavigationView>