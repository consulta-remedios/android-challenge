<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.cart.CartActivity">

    <include
            android:id="@+id/cartToolbar"
            layout="@layout/toolbar_cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <View android:id="@+id/lineTop"
          android:layout_height="1dp"
          android:background="@color/separator"
          android:layout_width="0dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/cartToolbar"
          app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cartRecGames"
            android:layout_width="0dp"
            android:layout_height="152dp"
            tools:listitem="@layout/item_cart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lineTop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2872777"/>

    <!-- ADRESS -->

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/labelEntrega"
            style="@style/TitleSectionCart"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/label_address_delivery"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/cartRecGames"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvEditAddress"
            style="@style/ActionSectionCart"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            tools:text="@string/label_edit"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAddress"
            style="@style/ContentSectionCart"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            tools:text="Rua Inacio Dantas, 2222, Brazil"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/labelEntrega"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>

    <View android:id="@+id/lineMiddle"
          android:layout_height="1dp"
          android:background="@color/separator"
          android:layout_width="0dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginTop="15dp"
          app:layout_constraintTop_toBottomOf="@+id/tvAddress"/>

    <!-- DELIVERY -->

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/labelDelivery"
            style="@style/TitleSectionCart"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="@string/label_delivery"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/lineMiddle"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/labelMail"
            style="@style/ContentSectionCart"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="@string/label_mail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/labelDelivery"
            android:layout_marginStart="16dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPriceDelivery"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            tools:text="R$ 20,00"
            app:layout_constraintBaseline_toBaselineOf="@+id/labelMail"
            app:layout_constraintStart_toEndOf="@+id/labelMail"
            android:layout_marginStart="8dp"/>

    <View android:id="@+id/lineBottom"
          android:layout_height="1dp"
          android:background="@color/separator"
          android:layout_width="0dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginTop="15dp"
          app:layout_constraintTop_toBottomOf="@+id/tvPriceDelivery"/>

    <!-- PAYMENT -->

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/labelPayment"
            style="@style/TitleSectionCart"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/label_payment"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/lineBottom"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvEditPayment"
            style="@style/ActionSectionCart"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            tools:text="@string/label_edit"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/lineBottom"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCardNumber"
            style="@style/ContentSectionCart"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            tools:text="5555 **** **** 4444"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/labelPayment"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCardFlag"
            style="@style/ContentSectionCartDetails"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            tools:text="Visa"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/tvCardNumber"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <View android:id="@+id/shadow"
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:background="@drawable/shape_gradient_top_shadow"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>