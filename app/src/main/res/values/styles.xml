<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text">
        <item name="android:textSize">@dimen/app_font_size</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="Text.ToolbarTitle" parent="Text">
        <item name="android:textColor">@color/colorTextTitle</item>
        <item name="android:textSize">@dimen/size_text_title_actionbar</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Text.Badge" parent="Text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/badge_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_badge</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/badge_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/badge_margin_end</item>
        <item name="android:paddingTop">@dimen/badge_padding_vertical</item>
        <item name="android:paddingEnd">@dimen/badge_padding_horizontal</item>
        <item name="android:paddingBottom">@dimen/badge_padding_vertical</item>
        <item name="android:paddingStart">@dimen/badge_padding_horizontal</item>
    </style>

    <style name="Separator">
        <item name="android:background">@color/separator</item>
    </style>

    <style name="PlatformStyleLabel">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="NameStyleLabel">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="PriceStyleLabel">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="TitleSectionCart">
        <item name="android:textColor">@color/colorTitleCart</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionSectionCart">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContentSectionCart">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ContentSectionCartDetails">
        <item name="android:textColor">@color/colorTitleCart</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
